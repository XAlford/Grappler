<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/luchaicon"
            android:layout_marginTop="4dp"
            android:src="@drawable/lucha6"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        style="@style/CardView.Dark"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#fff"

                android:id="@+id/item_logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/item_name"
                android:text="BACKMOUNT"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/item_logo"
                android:textSize="27dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_description"
                android:layout_marginLeft="16dp"

                android:layout_below="@+id/item_logo"
                android:textSize="12dp"
                android:text="decription"/>

            <TextView
                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:id="@+id/defensive_offensive"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/item_logo"
                android:layout_marginTop="50dp"
                android:text="Def_or_Off"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment"
                android:layout_toRightOf="@+id/item_logo"
                android:layout_below="@+id/defensive_offensive"
                android:text="PAY"
                android:textSize="30dp"/>




            <View
                android:id="@+id/dividingline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="275dp"
                android:background="#787777"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/cancel_action"
                android:textColor="#787777"
                android:src="@drawable/ic_cancel_black_24dp"


                android:layout_alignParentBottom="true"
                android:background="@color/cardview_dark_background"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/buy_button"
                android:textColor="#787777"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"


                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/cardview_dark_background"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/gotocheckout"
                android:layout_width="wrap_content"
                android:textColor="#000"

                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/cardview_dark_background"
                android:textSize="12dp"
                android:text="checkout" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>







</RelativeLayout>


